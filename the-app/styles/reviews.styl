.reviews
  padding 80px 10px
  background bg-cont
  &_title
    margin 10px 10px 70px
    font-weight 900
    font-size 36px
    text-transform uppercase
    line-height 66px
    letter-spacing 4px
    text-align center
    color #222323
    text-shadow 0 1px 3px #cdcdce
    opacity 0.76
  &_item
    max-width 750px
    margin 0 auto 70px
    &__img
      position relative
      height auto
      &-wrap
        width 170px
        height 170px
        margin 0 auto
        border-radius 50%
        overflow hidden
      &--elon
        width 294px
        left -44px
      &--satya
        width 235px
        left -31px
      &--mark
        width 194px
        left -17px
    &__name
      font-family my_fonts_1
      font-size  25px
      line-height 41px
      text-align center
      color #AC0000
    &__occupation
      margin-bottom 40px
      font-family my_fonts_1
      font-size  25px
      line-height 41px
      text-align center
      color #AC0000
    &__text
      font-weight 200
      font-size 18px
      line-height 25px
      text-align justify
      color #000000
  &_btn
    max-width: 320px;
    width 40%
    margin 10px 4%
    &-wrap
      display flex
      flex-direction row
      justify-content center
      align-items center
      margin 10px 10px 20px
@media all and (max-width: w_sm)
  .reviews_item__text
    padding 0 15%
  .app_btn-wrap
    flex-direction column
@media all and (max-width: w_xl)
  .reviews
    padding 40px 10px
    &_btn
      width: 87%;
      &-wrap
        flex-direction column
