.btn
  display inline-block
  margin 10px 15px
  padding 15px 20px
  box-sizing border-box
  font-size 19px
  text-align center
  text-transform uppercase
  text-decoration none
  border-radius 15px
  transition-duration time_trans
.btn-light
  color #fff
  border-top 1px solid rgba(255,255,255,0.84)
  border-bottom 1px solid rgba(255,255,255,0.84)
  box-shadow 0 1px 0 darken(c_turquoise,10%)
  &:hover
    color #fff
    background-color darken(c_turquoise,10%)
    border-top 1px solid rgba(255,255,255,0.84)
    border-bottom 1px solid rgba(255,255,255,0.84)
    border-color #fff
    box-shadow 0px 1px 3px c_dark
  &--active
    border-top 1px solid rgba(255,255,255,0.84)
    border-bottom 1px solid rgba(255,255,255,0.84)
    box-shadow 0 1px 0 darken(c_turquoise,10%)
    background-color #fff
    color darken(c_turquoise,30%)
    border-color #fff
    &:hover
      color #fff
      background-color darken(c_turquoise,10%)
      box-shadow 0px 1px 3px c_dark

.btn-dark
  color darken(c_turquoise,40%)
  border-top 1px solid
  border-bottom 1px solid
  border-color darken(c_turquoise,40%)
  box-shadow 0 1px 0 rgba(226, 245, 240, 0.32)
  &:hover
    background-color darken(c_turquoise,30%)
    color #fff
    border-color rgba(255, 255, 255, 0.5)
    box-shadow 0px 1px 3px c_dark
  &--active
    background-color darken(c_turquoise,30%)
    color #fff
    border-color rgba(255, 255, 255, 0.5)
    &:hover
      border-top 1px solid
      border-bottom 1px solid
      box-shadow: 0px 1px 3px c_dark
      border-color rgba(255, 255, 255, 0.5)
