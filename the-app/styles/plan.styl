.plan
  padding 80px 10px
  background bg-cont
  &_title
    margin-bottom 50px
    font-weight 900
    font-size 36px
    line-height 66px
    letter-spacing 4px
    text-align center
    text-transform uppercase
    color #222323
    text-shadow 0 1px 3px #cdcdce
    opacity 0.76
  &_item
    width 270px
    margin 0 2%
    padding 30px 5px
    box-sizing border-box
    border 1px solid #fff
    border-radius 5px
    opacity .9
    transition-duration time_trans-long
    &__prise
      font-weight 900
      font-size 34px
      color #FFFFFF
      opacity 0.95
      &-wrap
        display flex
        justify-content center
        align-items center
        width 110px
        height 110px
        margin 0 auto
        text-align center
        border 2px solid #fff
        border-radius 50%
        &--dark
          background linear-gradient(-45 deg, c_dark 50%, rgba(102,102,102,0.8) 50%)
        &--blue
          background linear-gradient(-45 deg, c_blue  50%, rgba(25,145,161, .8) 50%)
        &--orange
          background linear-gradient(-45 deg, c_orange 50%,rgba(255,186,27,.8) 50%)
    &:hover
      transform scale(1.14) translateY(28px)
      box-shadow: 0 1px 3px c_dark
    &-wrap
      display flex
      flex-direction row
      justify-content center
    &__name
      margin 30px 5px
      font-weight 700
      font-size 26px
      text-align center
      color #fff
    &__description
      font-weight 200
      font-size 19px
      line-height 24px
      text-align center
      color #fff
      opacity 0.8
    &__btn
      display block
      width 115px
      margin 30px auto
      padding 15px 5px
      font-size 18px
      font-weight 900
      text-align center
      text-transform uppercase
      text-decoration none
      border-top 1px solid
      border-bottom 1px solid
      border-radius 15px
      box-shadow 0 1px 0 rgba(226,245,240,.32)
      opacity 0.8
      transition-duration time_trans
      &:hover
        color #ffffff
        border transparent
      &--darck
        color c_dark
        &:hover
          background linear-gradient(-45 deg, c_dark 50%, rgba(102,102,102,0.8) 50%)
      &--orange
        color c_orange
        &:hover
          background linear-gradient(-45 deg, c_orange 50%,rgba(255,186,27,.8) 50%)
      &--blue
        color c_blue
        &:hover
          background linear-gradient(-45 deg, c_blue  50%, rgba(25,145,161, .8) 50%)
    &--dark
      background darken(c_dark,75%)
    &--orange
      background darken(c_orange,75%)
    &--blue
      background darken(c_blue,75%)
@media all and (max-width: w_sm)
  .plan_item
    margin 20px 2%
    &-wrap
      flex-direction column
      align-items center
    &:hover
      transform: scale(1.1)
@media all and (max-width: w_xs)
  .plan
    padding 40px 10px


